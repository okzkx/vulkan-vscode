{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "config",
            "type": "shell",
            "windows": {
                "command": "cmake",
                "args": [
                    "-S",".",
                    "-B","build",
                    "-G","MinGW Makefiles"],
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
        },
        {
            "label": "build",
            "type": "shell",
            "windows": {
                "command": "cmake",
                "args": [
                    "--build","build",
                    "--config", "Debug",
                    "--target",  "all",
                    "-j",  "14", "--"]
            },
            "dependsOn":["config"],
            "group": {
                "kind": "build",
                "isDefault": false
            },
        },
        {
            "label": "run",
            "type": "shell",
            "windows": {
                "command": "./build/renderer",
                "args": []
            },
            "dependsOn":["build"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ]
}